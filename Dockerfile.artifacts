FROM goreleaser/goreleaser:v1.24.0 as builder
WORKDIR /build
COPY . /build
RUN goreleaser release --snapshot --skip-publish --rm-dist

FROM alpine:3.20
COPY --from=builder /build/dist/ /dist/
RUN mkdir -p /artifacts && \
    cp /dist/*.tar.gz /artifacts/ && \
    cp /dist/*.txt /artifacts/ && \
    ls -la /artifacts/*
CMD ["sleep", "150"]